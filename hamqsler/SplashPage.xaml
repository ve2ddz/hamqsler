<Window x:Class="hamqsler.SplashPage"
	xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
	xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
	Title="hamqsler" Height="350" Width="500"
	Closing="Window_Closing" Loaded="Window_Loaded">
	<StackPanel>
		<Label>
			<Canvas>
				<Path Stroke="Black" Fill="Yellow" Canvas.Top="5" Canvas.Left="45">
					<Path.Data>
						<RectangleGeometry Rect="0,0,110,70"/>
					</Path.Data>
				</Path>
				<Path Stroke="Black" Fill="Black" StrokeThickness="20" Canvas.Top="5" Canvas.Left="45">
					<Path.Data>
						<LineGeometry StartPoint="3,13" EndPoint="83,13"/>
					</Path.Data>
				</Path>
				<Path Stroke="Black" Fill="Transparent" StrokeThickness="1" Canvas.Top="5" Canvas.Left="45">
					<Path.Data>
						<GeometryGroup>
							<RectangleGeometry Rect="5,35,100,25"/>
							<LineGeometry StartPoint="10,42" EndPoint="100,42"/>
							<LineGeometry StartPoint="10,52" EndPoint="100,52"/>
						</GeometryGroup>
					</Path.Data>
				</Path>
				<TextBlock Canvas.Top="10" Canvas.Left="180" FontSize="48" FontWeight="Bold"
							FontFamily="Times New Roman" Foreground="DarkBlue">HamQSLer</TextBlock>
			</Canvas>
		</Label>
	</StackPanel>
</Window>