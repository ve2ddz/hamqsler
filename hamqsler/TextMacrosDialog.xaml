<Window x:Class="hamqsler.TextMacrosDialog"
	xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
	xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
	xmlns:local="clr-namespace:hamqsler"
	Title="Text and Macros" Height="550" Width="350"
	PreviewKeyDown="OnPreviewKeyDown" Loaded="Window_Loaded">
	<DockPanel>
		<StackPanel DockPanel.Dock="Bottom">
			<Separator/>
			<Button Margin="5,5,20,5" Content="Close" Width="75" HorizontalAlignment="Right"
					Click="CloseButton_Clicked" IsDefault="True"/>
		</StackPanel>
		<ScrollViewer HorizontalScrollBarVisibility="Auto" VerticalScrollBarVisibility="Auto"
				VerticalAlignment="Stretch">
			<StackPanel Name="ContentPanel"/>
		</ScrollViewer>
	</DockPanel>
</Window>