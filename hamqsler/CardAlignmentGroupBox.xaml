<GroupBox x:Class="hamqsler.CardAlignmentGroupBox"
	xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
	xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
	<WrapPanel>
		<RadioButton x:Name="portraitTopLeftButton" Margin="5"
		             GroupName="alignmentGroup" Height="100" Width="115"
					 Checked="PortraitTopLeftButton_Checked"/>
		<RadioButton x:Name="portraitTopCenterButton" Margin="5"
		             GroupName="alignmentGroup" Height="100" Width="115"
					 Checked="PortraitTopCenterButton_Checked"/>
		<RadioButton x:Name="portraitCenterButton" Margin="5"
					 GroupName="alignmentGroup" Height="100" Width="115"
					 Checked="PortraitCenterButton_Checked"/>
		<RadioButton x:Name="landscapeTopLeftButton" Margin="5"
					 GroupName="alignmentGroup" Height="100" Width="115"
					 Checked="LandscapeTopLeftButton_Checked"/>
		<RadioButton x:Name="landscapeTopCenterButton" Margin="5"
					 GroupName="alignmentGroup" Height="100" Width="115"
					 Checked="LandscapeTopCenterButton_Checked"/>
		<RadioButton x:Name="landscapeCenterButton" Margin="5"
					 GroupName="alignmentGroup" Height="100" Width="115"
					 Checked="LandscapeCenterButton_Checked"/>
	</WrapPanel>
</GroupBox>