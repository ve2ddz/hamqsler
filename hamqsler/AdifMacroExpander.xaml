<local:MacroExpander x:Class="hamqsler.AdifMacroExpander"
	xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
	xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
	xmlns:local="clr-namespace:hamqsler"
	HeaderText="Adif Macro">
	<StackPanel>
		<CheckBox Content="Separate Cards by ADIF Field" Margin="20,3,3,3" IsChecked=
					"{Binding Path=SeparateCardsByField, Mode=TwoWay}" x:Name="SeparateCheckBox"/>
		<local:MacroExpander Header="Adif Field" Margin="20,3,3,3" IsExpanded="True">
			<local:StaticTextViewer x:Name="AdifField"/>
		</local:MacroExpander>
		<local:MacroExpander x:Name="DesignTextExpander" Header="Design Text" Margin="20,3,3,3"
				IsExpanded="True">
			<StackPanel x:Name="DesignTextPanel"/>
		</local:MacroExpander>
		<local:MacroExpander x:Name="NoFieldTextExpander" Header="No Field Text" Margin="20,3,3,3"
				IsExpanded="True">
			<StackPanel x:Name="NoFieldTextPanel"/>
		</local:MacroExpander>
	</StackPanel>
</local:MacroExpander>